<center>
  <div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;margin-top:20px" class="speaker-form">
    

    <%= simple_form_for [@event, @day, @program] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <%= f.hidden_field :user_id, :value=> current_user.id  %>

      <h1>Nytt program for <%= @event.name %></h1>

      <div class="mobileHide">

        Denne siden er ikke mobilsklar ennå.

      </div>


      <div class="desktopHide">
        <div class="form-inputs">
          <div class="row">
            <div class="col-md-6">
              <div class="box2">
                <%= text_field_tag("program[starttime]", value = @program.starttime&.strftime('%I:%M %p'), html_options = { class: 'form-control timepicker', placeholder: 'Velg starttid' }) %>  
              </div>
            </div>

            <div class="col-md-6">
              <div class="box2">
                <%= text_field_tag("program[endtime]", value = @program.endtime&.strftime('%I:%M %p'), html_options = { class: 'form-control timepicker', placeholder: 'Velg sluttid' }) %>
              </div>
              <div onclick="toggle_div('klik');">
                <div class="btn-green-events box" style="cursor:pointer">Klikk hér hvis popupen ikke vises.
                </div>
              </div>
              <br />
              <div id="klik" style="display:none">
                <div style="color:#999">
                  Time på toppen<br />
                  Minutt på bunnen<br />
                </div>
                <div class="col-xs-6">
                  <%= f.input :starttime %>
                </div>
                <div class="col-xs-6" style="margin-bottom: 30px">
                    <%= f.input :endtime %>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">

              <%= f.input :name, placeholder: 'Program tittel', label: false, class: "form-control" %><br />
              <%= f.text_area :description, placeholder: 'Om programmet', label: false, :rows => 7, class: "form-control" %><br />
              <%= f.input :place, placeholder: 'Lokasjon (hal/scene/etc) - valgfri', label: false, class: "form-control" %><br />




              <%= f.select :sorting_id, @sortings.collect {|c| [c.id]} %>


            </div>
            <div class="col-xs-6">
            <strong>Program bilde (500x260px):</strong><br /><%= f.file_field :image %><br /><br />
              <%= image_tag ('/sample.png'), class: 'shadow' %>
            </div>
          </div>
          <hr>

          <br /><br />


          
         <%= image_tag ('/sorting.png'), class: 'full-width' %>
          <br /><br />
          <i style="color:#888787;padding-bottom:20px">(Merk: Sortering starter alltid fra #1 og fortsetter opptil #20. Dvs. du kan for eksempel ikke starte med #5, hvis du ikke har opprettet #4.)</i>
          <br /><br /><br /><br />

        </div>

        <hr style="border: 1px solid #fff"><br />

        <%= f.fields_for :speakers do |speakers| %>
          <h1>Foredragsholder</h1>
          <%= render 'speaker_fields', f: speakers %>
        <% end %>

        <div class="links">
          <span class="white-text-bg shadow"><%= link_to_add_association 'LEGG TIL EN ANNEN FOREDRAGSHOLDER', f, :speakers, class: 'white-text' %></span>
        </div>
        <br /><br />

        <div class="form-actions">
          <%= f.submit "Opprett Program", class: 'button' %>
        </div>
      </div>
    <% end %>
  </div>
</center>