<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Program</th>
      <th>Speaker</th>
      <th>Name</th>
      <th>Ticket</th>
      <th>Image</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.program_id %></td>
        <td><%= event.speaker_id %></td>
        <td><%= event.name %></td>
        <td><%= event.ticket %></td>
        <td><%= event.image %></td>
        <td><%= event.address %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

