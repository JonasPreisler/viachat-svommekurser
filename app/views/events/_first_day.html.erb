        <%= link_to (image_tag program.image.url(:messenger)), event_day_program_path(program.event_id, program.day_id, program), class: 'speaker-image' %>
      <% else %>
        <%= link_to (image_tag '/thumbnail.png'), event_day_program_path(program.event_id, program.day_id, program), class: 'speaker-image' %>
      <% end %>
      <div class="caption">
        <div style="padding-top: 5px"><h4><%= link_to truncate(program.name, :length => 22), event_day_program_path(program.event_id, program.day_id, program), class: 'shorten' %></h4>
          </div>
      </div>

      <h4 style="font-size:16px;"><%= program.sorting %></h4>
      <i style="font-size:14px">
        <%= program.day.date %>
