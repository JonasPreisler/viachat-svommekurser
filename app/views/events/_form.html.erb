<center>
  <div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;margin-top:20px" class="speaker-form">
    <h1>Nytt arrangement</h1><br />
    <%= simple_form_for(@event) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.hidden_field :user_id, :value=> current_user.id  %>
      <%= f.hidden_field :event_id, :value=> @event.id  %>
      <div class="mobileHide">
        <%= f.input :name, placeholder: 'Navn på arrangementet', label: false %><br />
        <%= f.input :ticket, placeholder: 'Lenke til billett kjøp (valgfri)', label: false %><br />
        <%= f.input :address, placeholder: 'Adresse', label: false %><br /><br />
        <strong>Event Billede (500x260px):</strong><br /><%= f.file_field :image %><br />
        <strong>Kort over arrangementet (500x500px) (valgfri):</strong><br /><%= f.file_field :image %><br />
      </div>

      <div class="desktopHide">
        <div class="form-inputs">
          <div class="row" style="width:90%">
            <div class="col-xs-6">
              <%= f.input :name, placeholder: 'Navn på arrangementet', label: false %><br />
              <%= f.input :address, placeholder: 'Adresse', label: false %><br />
              <%= f.input :ticket, placeholder: 'Lenke til billett kjøp (valgfri)', label: false %><br />

            </div>
            <div class="col-xs-6">
              <strong>Arrangement bilde (500x260px):</strong><br /><%= f.file_field :image %><br />
              <strong>Kort oversigt (500x500px) (valgfri):</strong><br /><%= f.file_field :map %><br />
            </div>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Opprett arrangement", class: 'button' %>
      </div>
    <% end %>
  </div>
</center>
