<center>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;" class="speaker-form">
  <div style="width:50%">
  <h4><b>Registrér</b></h4>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true %>
      <br /><br />
      <%= f.input :password, placeholder: 'Kodeord', label: false, required: true %>
      <span style="color:#888787;font-size:12px;">Minimum 6 karakterer.</span>
      <br /><br />
      <%= f.input :password_confirmation, placeholder: 'Bekræft kodeord', label: false, required: true %><br />
    </div>

    <div class="form-actions">
      <%= f.submit 'Opret konto', class: 'button' %><br /><br />

    </div>
  <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
</center>