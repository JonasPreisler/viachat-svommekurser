<center>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;" class="speaker-form">
  <div style="width:50%">
  <h4><b>Rediger kontoen din</b></h4>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="mobileHide">

      <div class="form-inputs">
        <%= f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true %><br />

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, placeholder: 'Passord', label: false, autocomplete: "off", required: false %><br />
        <%= f.input :password_confirmation, placeholder: 'Bekreft passord', label: false, required: false %><br />
        <%= f.input :current_password, placeholder: 'Nåværende passord', label: false, required: true %>
        <span style="color:#888787;font-size:12px;">Vi trenger ditt nåværende passord for å bekrefte endringene dine.</span><br />
        <br /><br />

      </div>

      <div class="form-actions">
        <%= f.submit 'Oppdater konto', class: 'button' %><br /><br />
      </div>
    </div>

    <div class="desktopHide">

      <div class="form-inputs">
        <%= f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true %><br />

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, placeholder: 'BPassord', label: false, autocomplete: "off", required: false %><br />
        <%= f.input :password_confirmation, placeholder: 'Bekreft passord', label: false, required: false %><br />
        <%= f.input :current_password, placeholder: 'Nåværende passord', label: false, required: true %>
        <span style="color:#888787;font-size:12px;">Vi trenger ditt nåværende passord for å bekrefte endringene dine.</span><br />
        <br /><br />

      </div>

      <div class="form-actions">
        <%= f.submit 'Oppdater konto', class: 'button' %><br /><br />
    </div>
  <% end %>

  <p><%= link_to 'Avbryt konto', registration_path(resource_name), data: { confirm: "Er du sikker?" }, method: :delete %></p>
  </div>
</div>
</center>