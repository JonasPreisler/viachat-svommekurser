<p id="notice"><%= notice %></p>

<h1>Sortings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sortings.each do |sorting| %>
      <tr>
        <td><%= link_to 'Show', sorting %></td>
        <td><%= link_to 'Edit', edit_sorting_path(sorting) %></td>
        <td><%= link_to 'Destroy', sorting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

