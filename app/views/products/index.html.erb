<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6 col-sm-6">
    <h1><%= I18n.t "products2" %></h1>
  </div>
  <div class="desktopHide">
    <div class="col-md-6 col-sm-6">
      <%= string_with_link(t('addproduct'), new_product_path, class: 'btn-primary2 box shadow pull-right') %>
    </div>
  </div>

  <div class="mobileHide">
    <div class="col-md-6 col-sm-6">
      <%= string_with_link(t('addproduct'), new_product_path, class: 'btn-primary2 box shadow') %>
    </div>
  </div>
</div>

<% unless current_user.products.any? %>
<div style="font-size:20px;text-align: center;padding-top:30px;"><%= I18n.t "noproduct" %> </div>
<% else %>

<br />
<div class="row">
<% @products.each do |product| %>
  <% if current_user.id == product.user_id %>
    <div class="col-md-3 col-sm-4">
      <div class="thumbnail">
        <% if product.image? %>
          <%= link_to (image_tag product.image.url(:messenger)), product, class: 'product-image' %>
        <% else %>
          <%= link_to (image_tag '/thumbnail.png'), product, class: 'product-image' %>
        <% end %>
        <div class="caption">
          <div class="row">
            <div class="col-sm-6 col-sm-4 col-xs-6">
              <h4 style="font-size:16px;padding-top: 10px;"><%= link_to product.title, product %></h4>
            </div>
            <div class="col-sm-6 col-sm-4 col-xs-6">
            </div>
          </div>
        </div>
        <div class="panel-footer">
              <%= link_to "Show", product_path(product), class: 'btn-green box' %>
              <%= link_to "Edit", edit_product_path(product), class: 'btn-green box' %>
          <%= link_to 'Delete', product_path(product),
          data: {:confirm => 'Are you sure?'}, :method => :delete, class: 'btn-red box' %>
          <%#div class="col-xs-8 col-sm-6">
            <% &#9889; rating %>
          <%#/div>
          <%#div class="col-xs-4 col-sm-6"%>
        </div>
          <%#/div%>
      </div>
    </div>
  <% end %>
<% end %>
</div>
<br />
<% end %>
