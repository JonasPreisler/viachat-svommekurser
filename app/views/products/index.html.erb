<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6 col-sm-6">
    <h1>Produkter</h1>
  </div>
  <div class="desktopHide">
    <div class="col-md-6 col-sm-6">
      <%= link_to 'Tilføj produkt', new_product_path, class: 'btn-primary2 box shadow pull-right' %>
    </div>
  </div>

  <div class="mobileHide">
    <div class="col-md-6 col-sm-6">
      <%= link_to 'Tilføj produkt', new_product_path, class: 'btn-primary2 box shadow' %>
    </div>
  </div>
</div>

<% unless current_user.products.any? %>
<div style="font-size:20px;text-align: center;padding-top:30px;"><%= I18n.t "noproduct" %> </div>
<% else %>

<br />
<hr>
<div class="row">
<center><h2>1. række</h2></center>
<br />

<% @products.each do |product| %>
  <% if current_user.id == product.user_id %>
    <div class="col-md-3 col-sm-4">
      <div class="thumbnail">
        <% if product.image? %>
          <%= link_to (image_tag product.image.url(:messenger)), product, class: 'product-image' %>
        <% else %>
          <%= link_to (image_tag '/thumbnail.png'), product, class: 'product-image' %>
        <% end %>
        <div class="caption">
          <div class="row">
            <div class="col-sm-6 col-sm-4 col-xs-6">
              <h4 style="font-size:16px;padding-top: 10px;"><%= product.sorting %> - <%= link_to product.title, product %></h4>
            </div>
            <div class="col-sm-6 col-sm-4 col-xs-6">
            </div>
          </div>
        </div>
        <div class="panel-footer">
            <%= link_to "Vis", product_path(product), class: 'btn-green box' %>
            <%= link_to "Ændre", edit_product_path(product), class: 'btn-green box' %>
          <%= link_to 'Slet', product_path(product),
          data: {:confirm => 'Er du sikker?'}, :method => :delete, class: 'btn-red box' %>
          <%#div class="col-xs-8 col-sm-6">
            <% &#9889; rating %>
          <%#/div>
          <%#div class="col-xs-4 col-sm-6"%>
        </div>
          <%#/div%>
      </div>
    </div>
  <% end %>
<% end %>
</div>

<% if @products_2.any? %>
  <hr>
  <div class="row">
  <center><h2>2. række</h2></center>
  <br />
  <% @products_2.order('sorting ASC').each do |product| %>
    <% if current_user.id == product.user_id %>
      <div class="col-md-3 col-sm-4">
        <div class="thumbnail">
          <% if product.image? %>
            <%= link_to (image_tag product.image.url(:messenger)), product, class: 'product-image' %>
          <% else %>
            <%= link_to (image_tag '/thumbnail.png'), product, class: 'product-image' %>
          <% end %>
          <div class="caption">
            <div class="row">
              <div class="col-sm-6 col-sm-4 col-xs-6">
                <h4 style="font-size:16px;padding-top: 10px;"><%= product.sorting %> - <%= link_to product.title, product %></h4>
              </div>
              <div class="col-sm-6 col-sm-4 col-xs-6">
              </div>
            </div>
          </div>
          <div class="panel-footer">
              <%= link_to "Vis", product_path(product), class: 'btn-green box' %>
              <%= link_to "Ændre", edit_product_path(product), class: 'btn-green box' %>
            <%= link_to 'Slet', product_path(product),
            data: {:confirm => 'Er du sikker?'}, :method => :delete, class: 'btn-red box' %>
            <%#div class="col-xs-8 col-sm-6">
              <% &#9889; rating %>
            <%#/div>
            <%#div class="col-xs-4 col-sm-6"%>
          </div>
            <%#/div%>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
<% end %>
<br />
<% end %>
