<p id="notice"><%= notice if user_signed_in? %></p>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;" class="product-form">
  <div class="row">
    <div class="col-md-6 col-sm-6 product">
      <p>
        <strong>Titel:</strong><br />
        <%= @product.title %>
      </p>

      <p>
        <strong>Pris:</strong><br />
        DKK <%= number_with_delimiter(@product.price, :delimiter => '.') %>
      </p>

      <p>
        <strong>Link:</strong><br />
        <%= @product.product_link %>
      </p>

      <p>
        <strong>Nummer:</strong><br />
        <%= @product.nummer %>
      </p>

    </div>
    <div class="col-md-6 col-sm-6">
      <center>

        <p>
          <% if @product.image? %>
            <%= image_tag @product.image.url(:messenger), class: 'image-border' %>
          <% else %>
            <%= link_to (image_tag '/thumbnail.png'), product, class: 'product-image' %>
          <% end %>
        </p>
      <%= link_to 'Ændre', edit_product_path(@product), class: 'btn-primary box' if user_signed_in? and current_user.id == @product.user_id %> 
      <%= link_to 'Slet', product_path(@product),
      data: {:confirm => 'Bekræft'}, :method => :delete, class: 'box btn-red' if user_signed_in? and current_user.id == @product.user_id %>

      </center>

    </div>
  </div>
</div>