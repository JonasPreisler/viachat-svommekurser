<center>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;" class="product-form">

  <%= form_with(model: lead, local: true) do |form| %>
    <% if lead.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(lead.errors.count, "error") %> prohibited this lead from being saved:</h2>

        <ul>
        <% lead.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= form.number_field :user_id  %>

    <div class="field">
      <%= form.text_field :first_name, placeholder: 'First Name', label: false %>
    </div><br />

    <div class="field">
      <%= form.text_field :last_name, placeholder: 'Last name', label: false %>
    </div><br />

    <div class="field">
      <%= form.text_field :secret %>
    </div>

    <div class="field">
      <%= form.text_field :email, placeholder: 'Email', label: false %>
    </div><br />
    
    <div class="field">
      <%= form.text_field :phone, placeholder: 'Phone', label: false %>
    </div><br />

    <div class="field">
      <%= form.text_field :city, placeholder: 'City', label: false %>
    </div><br />

    <div class="field">
      <%= form.text_field :forsikring_valg, placeholder: 'Forsikring', label: false %>
    </div><br />

    <div class="field">
      <%= form.text_field :gender, placeholder: 'Gender', label: false %>
    </div><br />


    <div class="actions">
      <%= form.submit "Register lead", class: 'waves-effect waves-light btn-large' %>
    </div>

  <% end %>
</div>
</center>