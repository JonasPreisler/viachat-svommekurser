<center>
<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;margin-top:20px" class="speaker-form">
<h1>Ny speaker</h1><br />
  <%= simple_form_for(@speaker, :html => { :multipart => true }) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.hidden_field :user_id, :value=> current_user.id  %>

    <div class="mobileHide">
      <div class="form-inputs">
        <%= f.input :title, placeholder: 'Navn', label: false, class: "form-control" %><br />
        <%= f.input :description, placeholder: 'Om speakeren', label: false, class: "form-control" %><br />
        <br />
        <%= f.input :sorting, placeholder: 'Sortering', label: false, class: "form-control" %><br />
        <br />
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon3" aria-describedby="basic-addon3"><%= I18n.t "currency" %> </span>
           <%= f.input :speakingtime, placeholder: 'Tidspunkt', label: false %>
        </div><br />


        <br />
      </div>
      <br />

      <div class="form-actions">
        <%= f.submit 'Opret speaker', class: 'button' %>
      </div>
    </div>

    <div class="desktopHide">
      <div class="form-inputs">
        <%= f.input :title, placeholder: 'Navn', label: false, class: "form-control" %><br />
        <%= f.input :description, placeholder: 'Om speakeren', label: false, class: "form-control" %><br />
        <%= f.input :sorting, placeholder: 'Sortering', label: false, class: "form-control" %><br />
        <div class="input-group" style="padding-left: 30%;">
          <span class="input-group-addon" id="basic-addon3" aria-describedby="basic-addon3">Tidspunkt </span>
           <%= f.input :speakingtime, placeholder: 'Tidspunkt', label: false %>
        </div><br />

        <strong>Billede for speaker siden:</strong><br /><%= f.file_field :image %><br />




        <br />
      </div>
      <br />

      <div class="form-actions">
        <%= f.submit 'Opret speaker', class: 'button' %>
      </div>
    </div>
  <% end %>

</div>
</center>