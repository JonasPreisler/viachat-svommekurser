<div class="nested-fields">
  <center>
    <div style="background: #f3f2f2;border-radius:10px;color:#1c1c1c" class="speaker-form">
    <h1>Speaker</h1><br />
      <%= f.hidden_field :user_id, :value=> current_user.id  %>

      <div class="mobileHide">
        <div class="form-inputs">
          <%= f.input :name, placeholder: 'Speaker navn', label: false, class: "form-control" %><br />
          <%= f.text_area :description, placeholder: 'Om speakeren', label: false, :rows => 5, class: "form-control" %><br />
          <br />
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon3" aria-describedby="basic-addon3"><%= I18n.t "currency" %> </span>
          <%= f.input :sorting, placeholder: 'Sortering (1-20)', label: false, class: "form-control" %><br />
          </div><br />

          <strong>Billede:</strong><br /><%= f.file_field :image %><br />

        </div>
        <br />
      </div>

      <div class="desktopHide">
        <div class="form-inputs">
          <%= f.input :name, placeholder: 'Navn', label: false, class: "form-control" %><br />
          <%= f.input :description, placeholder: 'Om speakeren', label: false, class: "form-control" %><br />
          <%= f.input :sorting, placeholder: 'Sortering (1-20)', label: false, class: "form-control" %><br />
          <br />



          <strong>Billede:</strong><br /><%= f.file_field :image %><br />


        </div>

      </div>

    </div>
  </center>
</div>